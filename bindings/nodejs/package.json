{
  "name": "sentencex",
  "version": "1.0.9",
  "description": "sentence segmentation library",
  "type": "module",
  "main": "index.cjs",
  "repository": {
    "type": "git",
    "url": "https//github.com/wikimedia/sentencex"
  },
  "author": "Santhosh Thottingal <santhosh.thottingal@gmail.com>",
  "license": "MIT",
  "keywords": [
    "nlp",
    "sentence-segmentation"
  ],
  "bugs": {
    "url": "https://github.com/wikimedia/sentencex/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "*.cjs",
    "*.mjs",
    "*.js",
    "*.md",
    "LICENSE",
    "*.node"
  ],
  "exports": {
    ".": {
    "require": "./index.node",
    "import": "./index.mjs"
    }
  },
  "optionalDependencies": {
    "sentencex-linux-x64": "file:pkgs/sentencex-linux-x64"
  },
  "scripts": {
    "build": "cargo build --release && cp index.node pkgs/sentencex-linux-x64/",
    "test": "node --test test.js"
  }
}
